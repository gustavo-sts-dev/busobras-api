{
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "src/",
    "outDir": "dist/",

    "types": ["node"],
    "module": "nodenext",
    "moduleResolution": "nodenext",

    "strict": true,
    "noImplicitAny": false,

    "paths": {
      "@src/*": ["./src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
